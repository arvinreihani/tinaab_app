<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting"
        app:srcCompat="@drawable/sleep_illustrations_01_removebg_preview" />

    <Button
        android:id="@+id/setting"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/setting"
        app:icon="@drawable/setting"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/panel"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="@string/panel"
        android:textSize="12sp"
        app:icon="@drawable/computer"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gadget"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:icon="@drawable/smartwatch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecord"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/analysis"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:icon="@drawable/analyzing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/situation"
        app:layout_constraintStart_toEndOf="@+id/gadget"
        app:layout_constraintTop_toBottomOf="@+id/Alarm"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/situation"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:lineSpacingExtra="8sp"
        android:textStyle="bold"
        app:icon="@drawable/check_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toEndOf="@+id/analysis"
        app:layout_constraintTop_toBottomOf="@+id/lamp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:icon="@drawable/microphone"
        app:layout_constraintBottom_toTopOf="@+id/gadget"
        app:layout_constraintEnd_toStartOf="@+id/Alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/Alarm"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:icon="@drawable/circular_alarm_clock_tool"
        app:layout_constraintBottom_toTopOf="@+id/analysis"
        app:layout_constraintEnd_toStartOf="@+id/lamp"
        app:layout_constraintStart_toEndOf="@+id/btnRecord"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.081"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/lamp"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:icon="@drawable/technology"
        app:layout_constraintBottom_toTopOf="@+id/situation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Alarm"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>